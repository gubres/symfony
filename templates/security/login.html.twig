{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión!{% endblock %}

{% block body %}
<div class="container mt-5">
    {% if app.user %}
        <div class="alert alert-info">
            <p>Ya ha iniciado sesión como {{ app.user.userIdentifier }}.</p>
            <div><a href="{{ path('app_main') }}" class="alert-link">Ir a la página principal</a></div><br>
            <form action="{{ path('app_logout') }}" method="post" class="d-inline">
                <p>No es: {{ app.user.userIdentifier }}? </p><button type="submit" class="btn btn-warning btn-sm ml-2">Logout</button>
            </form>
        </div>
    {% else %}
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="{{ path('app_login') }}" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <h1 class="h3 mb-3 font-weight-normal">Por favor, inicia sesión</h1>
                    <div class="form-group mb-3">
                        <label for="username">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Contraseña</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    </div>
                   <div class="form-group form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                        <label class="form-check-label" for="remember_me">Recuérdame</label>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-md btn-primary btn-block" type="submit">Iniciar sesión</button>
                    <p class="mt-2">
                        ¿No tienes una cuenta? <a href="{{ path('app_register') }}" class="link-primary">Regístrate aquí</a>
                    </p>
                </form>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
